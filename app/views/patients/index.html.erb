<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Address</th>
      <th>City</th>
      <th>County</th>
      <th>Email</th>
      <th>Doctor</th>
      <th>Appointment</th>
      <th>Perscription</th>
      <th>Diagnosis</th>
      <th>Consultation</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.patient_id %></td>
        <td><%= patient.firstname %></td>
        <td><%= patient.surname %></td>
        <td><%= patient.address %></td>
        <td><%= patient.city %></td>
        <td><%= patient.county %></td>
        <td><%= patient.email %></td>
        <td><%= patient.doctor %></td>
        <td><%= patient.appointment %></td>
        <td><%= patient.perscription %></td>
        <td><%= patient.diagnosis %></td>
        <td><%= patient.consultation %></td>
        <td><%= patient.image_url %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

